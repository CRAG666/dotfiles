set notification-fg             "#7ad88e" # bright:green

set completion-bg               "#121212" # bg2
set completion-fg               "#e6d6ac" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#7cb7ff" # bright:blue
set completion-highlight-fg     "#121212" # bg2

# Define the color in index mode
set index-bg                    "#121212" # bg2
set index-fg                    "#e6d6ac" # fg
set index-active-bg             "#7cb7ff" # bright:blue
set index-active-fg             "#121212" # bg2

